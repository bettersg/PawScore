{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*"],
			"contract": ["../contract/index.ts"]
		},
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*", "../contract/**/*"]
}
