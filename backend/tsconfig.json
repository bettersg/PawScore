{
	"compilerOptions": {
		"module": "ES2020",
		"esModuleInterop": true,
		"target": "ES2020",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": "./",
		"rootDir": "../",
		"paths": {
			"@contract": ["../contract"],
			"*": ["node_modules/*"]
		},
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"strict": true,
		"skipLibCheck": true,
		"composite": true,
		"noEmitOnError": true,
		"allowSyntheticDefaultImports": true,
		"allowJs": true
	},
	"include": ["src/**/*", "../contract/**/*"]
}
