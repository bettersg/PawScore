{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": "./",
		"rootDir": "../",
		"paths": {
			"@contract": ["../contract"],
			"*": ["node_modules/*"]
		},
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"strict": true,
		"skipLibCheck": true,
		"composite": true,
		"noEmitOnError": true
	},
	"include": ["src/**/*", "../contract/**/*"]
}
